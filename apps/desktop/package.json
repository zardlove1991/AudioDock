{
  "name": "sound-x",
  "private": true,
  "version": "1.0.50",
  "productName": "Sound X",
  "author": "mmdctjj <mmdctjj@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmdctjj/AudioDock"
  },
  "homepage": "https://github.com/mmdctjj/AudioDock",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:win": "cross-env VITE_PLATFORM=win tsc -b && vite build && electron-builder --win --x64",
    "build:win:arm64": "cross-env VITE_PLATFORM=win tsc -b && vite build && electron-builder --win --arm64",
    "build:mac": "cross-env VITE_PLATFORM=mac tsc -b && vite build && electron-builder --mac",
    "build:linux": "cross-env VITE_PLATFORM=linux tsc -b && vite build && electron-builder --linux",
    "build:web": "cross-env VITE_PLATFORM=web tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@soundx/db": "workspace:*",
    "@soundx/services": "workspace:*",
    "@soundx/ws": "workspace:*",
    "ahooks": "^3.9.6",
    "antd": "^5.29.1",
    "axios": "^1.13.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "sass": "^1.94.2",
    "socket.io-client": "^4.8.1",
    "vite-plugin-svgr": "^4.5.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^10.1.0",
    "electron": "39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "less": "^4.4.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^5.4.8",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.soundx.app",
    "productName": "AudioDock",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sound X"
    },
    "mac": {
      "icon": "dist/logo.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.music"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio",
      "icon": "public/logo.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
